# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Database Configuration
# Use your actual Neon database URL from your Neon dashboard
DATABASE_URL=postgresql://username:password@ep-abc123-def456.us-east-1.aws.neon.tech/database_name?sslmode=require

# Server Configuration
PORT=3000
NODE_ENV=production

# Session Configuration
SESSION_SECRET=your-secure-random-session-secret-for-production

# AI Provider API Keys (Required for production)
# OpenAI Configuration
OPENAI_API_KEY=sk-...

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini Configuration
GOOGLE_API_KEY=AIza...

# Hugging Face Configuration
HUGGING_FACE_API_KEY=hf_...
HF_TOKEN=hf_...

# Ollama Configuration (if using local LLM in production)
OLLAMA_BASE_URL=http://localhost:11434

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG...

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Security Settings
CORS_ORIGIN=https://yourdomain.com
TRUST_PROXY=true

# Logging
LOG_LEVEL=info

# Performance
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true

